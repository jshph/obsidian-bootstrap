            },
          ],
        };
      } catch (error) {
        return {
          content: [
            {
              type: "text",
              text: `Error creating vault: ${error}`,
            },
          ],
        };
      }
    }
    
    case "list_templates": {
      const templateList = Object.entries(VAULT_TEMPLATES)
        .map(([key, template]) => {
          return `**${template.name}** (${key})\n${template.description}\nFeatures: ${template.features.join(", ")}`;
